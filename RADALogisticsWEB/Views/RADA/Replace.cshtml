
@{
    ViewBag.Title = "RADA Logistics | Replace";
}

<link href="~/Stylee/RecordsStylee.css" rel="stylesheet" />

<div class="container" style="text-align: center; width: 100%; height: 100%">

    <div style="text-align: center; min-width: 100%; ">

        <style>
            .page-title {
                text-align: center;
                font-size: 21px;
                font-weight: 700;
                color: #2c3e50;
                margin-bottom: 15px;
            }

            .section-subtitle {
                text-align: center;
                font-size: 17px;
                font-weight: 500;
                color: #555;
                margin-bottom: 25px;
            }
        </style>

        <h2 class="page-title"> Remplazar numero de contenedor </h2>
        <h4 class="section-subtitle"> Ingresa el nuevo contenedor que quieres remplazar </h4>

        <hr>
        <div style=" display: flex; justify-content: center; align-items: center; height: auto;">
            <button class="animated-button" onclick="location.href='@Url.Action("MoreOptions","RADA", new { ID = @ViewBag.ID})'">
                <svg xmlns="http://www.w3.org/2000/svg" class="arr-2" viewBox="0 0 24 24">
                    <path d="M16.1716 10.9999L10.8076 5.63589L12.2218 4.22168L20 11.9999L12.2218 19.778L10.8076 18.3638L16.1716 12.9999H4V10.9999H16.1716Z"></path>
                </svg>
                <span class="text">Return to back</span>
                <span class="circle"></span>
                <svg xmlns="http://www.w3.org/2000/svg" class="arr-1" viewBox="0 0 24 24">
                    <path d="M16.1716 10.9999L10.8076 5.63589L12.2218 4.22168L20 11.9999L12.2218 19.778L10.8076 18.3638L16.1716 12.9999H4V10.9999H16.1716Z"></path>
                </svg>
            </button>
        </div>
        <hr>

        <form id="miFormulario" method="post" action="@Url.Action("ReplaceProcess", "RADA")">
            <p style="text-align: center;">&nbsp;</p>

            <input readonly="@true" type="text" id="OldID" name="OldID" value="@ViewBag.ID" hidden="hidden" required>

            <h5 class="Tittlelabel" style="font-weight: 700;"> Numero de contenedor (VIEJO): </h5>
            <hr style="border: 1px solid #CECECE; width: 35vh; margin: 5px auto ">
            <p style="text-align: center;">&nbsp;</p>

            <div class="group">
                <input readonly="@true" type="text" id="OldContainer" name="OldContainer" value="@ViewBag.Contenedor" required>
                <span class="highlight"></span>
                <span class="bar"></span>
            </div>

            <p style="text-align: center;">&nbsp;</p>

            <div class="group">
                <input style="background-color: #E8E8E8" type="text" id="NewContainer" name="NewContainer" required>
                <span class="highlight"></span>
                <span class="bar"></span>
                <label>Numero de contenedor (NUEVO):</label>
            </div>

            <!-- Campo oculto para enviar la decisión -->
            <input type="hidden" id="guardarAnterior" name="guardarAnterior" value="" />

            <p style="text-align: center;">&nbsp;</p>
            <button type="button" class="Bto_saved" onclick="confirmarGuardar()">
                 Guardar Cambios
            </button>
            <p style="text-align: center;">&nbsp;</p>
        </form>

        <script>
            function confirmarGuardar() {
                const newId = document.getElementById("NewContainer").value.trim();

                if (newId === "") {
                    alert("Por favor, escribe el número de contenedor nuevo.");
                    return; // Detiene el envío
                }

                const guardar = confirm("¿Deseas guardar también el registro anterior?");
                document.getElementById("guardarAnterior").value = guardar ? "true" : "false";
                document.getElementById("miFormulario").submit();
            }
        </script>



    </div>

</div>

