
@{
    ViewBag.Title = "RADA Logistics - Comment";
}

<link href="~/Stylee/NewUsersStylee.css" rel="stylesheet" />

<div class="container" style="text-align: center; width: 100%; height: 100%">

    <div style="text-align: center; min-width: 100%; ">

        <style>
            .page-title {
                text-align: center;
                font-size: 20px;
                font-weight: 700;
                color: #2c3e50;
                margin-bottom: 15px;
                text-transform: uppercase;
                letter-spacing: 0px;
            }

            .section-subtitle {
                text-align: center;
                font-size: 17px;
                font-weight: 500;
                color: #555;
                margin-bottom: 25px;
            }
        </style>

        <h2 class="page-title" style="font-weight: 700;">Generate Motion in Process Comment</h2>
        <h4 class="section-subtitle"> Generate a comment on the movement to keep the hisense staff informed </h4>

        <input value="@ViewBag.User" hidden="hidden" id="user" name="user" />
        <hr>
        <div style=" display: flex; justify-content: center; align-items: center; height: auto;">
            <button class="animated-button" onclick="location.href='@Url.Action("EntryContainer", "RADA")'">
                <svg xmlns="http://www.w3.org/2000/svg" class="arr-2" viewBox="0 0 24 24">
                    <path d="M16.1716 10.9999L10.8076 5.63589L12.2218 4.22168L20 11.9999L12.2218 19.778L10.8076 18.3638L16.1716 12.9999H4V10.9999H16.1716Z"></path>
                </svg>
                <span class="text">Return to back</span>
                <span class="circle"></span>
                <svg xmlns="http://www.w3.org/2000/svg" class="arr-1" viewBox="0 0 24 24">
                    <path d="M16.1716 10.9999L10.8076 5.63589L12.2218 4.22168L20 11.9999L12.2218 19.778L10.8076 18.3638L16.1716 12.9999H4V10.9999H16.1716Z"></path>
                </svg>
            </button>
        </div>
        <hr>
    </div>
</div>

<div class="container" style="text-align: center; width: 100%; height: 100%">

    <div style="text-align: center; min-width: 100%; ">

       @using (Html.BeginForm("GetComments", "RADA", FormMethod.Post))
        {
            <br>
            <h5 class="labelTitt" style="font-weight: 700; color: #5264AE" > Status Report: </h5>
            <h5 class="labelTitt"> @ViewBag.Status </h5>
            <input value="@ViewBag.Status" hidden="hidden" id="Status" name="Status" />

            <br>
            <h5 class="labelTitt" style="font-weight: 700; color: #5264AE" > Report Number (Folio): </h5>
            <h5 class="labelTitt"> @ViewBag.id </h5>
            <input value="@ViewBag.id" hidden="hidden" id="id" name="id" />

            <p style="text-align: center;">&nbsp;</p>
            <p style="text-align: center;">&nbsp;</p>

            <div class="group">
                <input type="text" id="Comment" name="Comment" required>
                <span class="highlight"></span>
                <span class="bar"></span>
                <label>Enter your Comment:</label>
            </div>

            <p style="text-align: center;">&nbsp;</p>
            <button type="submit" class="Bto_saved">
                ✅ Save
            </button>
        }

    </div>

</div>

