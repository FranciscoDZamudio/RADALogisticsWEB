
@{
    ViewBag.Title = "RADA Logistics - Update User";
}

<link href="~/Stylee/NewUsersStylee.css" rel="stylesheet" />

<div class="container" style="text-align: center; width: 100%; height: 100%">

    <div style="text-align: center; min-width: 100%; ">

       @using (Html.BeginForm("Update", "Users", FormMethod.Post))
        {
            <p style="text-align: center;">&nbsp;</p>
            <img src="~/Pictures/actualizar.png" height="90" />
            <p style="text-align: center;">&nbsp;</p>

            <h4 class="labelTitt">
                Updating User Data - User Control View
            </h4>
            <h5 style="text-align:center">Update Information</h5>

            <hr>
            <div style=" display: flex; justify-content: center; align-items: center; height: auto;">
                <button class="animated-button" onclick="location.href='@Url.Action("AdministratorHome", "Home")'">
                    <svg xmlns="http://www.w3.org/2000/svg" class="arr-2" viewBox="0 0 24 24">
                        <path d="M16.1716 10.9999L10.8076 5.63589L12.2218 4.22168L20 11.9999L12.2218 19.778L10.8076 18.3638L16.1716 12.9999H4V10.9999H16.1716Z"></path>
                    </svg>
                    <span class="text">Return to back</span>
                    <span class="circle"></span>
                    <svg xmlns="http://www.w3.org/2000/svg" class="arr-1" viewBox="0 0 24 24">
                        <path d="M16.1716 10.9999L10.8076 5.63589L12.2218 4.22168L20 11.9999L12.2218 19.778L10.8076 18.3638L16.1716 12.9999H4V10.9999H16.1716Z"></path>
                    </svg>
                </button>
            </div>
            <hr>

            <input value="@ViewBag.ID" name="id" id="id" hidden="hidden" />

            <h5 class="typelbl" style="text-align: center; font-size: 15px; font: bold; ">Type:</h5>
            <div class="group">
                <select name="TypeUsers" id="TypeUsers" class="form-control" style="max-width: 50%; color: black; text-align: center">
                    <option value="@ViewBag.TypeUsers">@ViewBag.TypeUsers</option>
                    <option value="ADMINISTRATOR">ADMINISTRATOR</option>
                    <option value="HISENSE">HISENSE</option>
                    <option value="RADA">RADA</option>
                </select>
            </div>
            <p style="text-align: center;">&nbsp;</p>

            <h5 class="Tittlelabel"> Information Personal</h5>
            <hr style="border: 1px solid #CECECE; width: 35vh; margin: 5px auto ">
            <p style="text-align: center;">&nbsp;</p>
            <div class="group">
                <input type="text" id="Username" name="Username" value="@ViewBag.User" required>
                <span class="highlight"></span>
                <span class="bar"></span>
                <label>Enter your Username:</label>
            </div>

            <div class="group">
                <input type="number" id="Credentials" name="Credentials" value="@ViewBag.EmployeeNumber" required>
                <span class="highlight"></span>
                <span class="bar"></span>
                <label>Employee Number:</label>
            </div>

            <h5 class="Tittlelabel"> Email and Log In </h5>
            <hr style="border: 1px solid #CECECE; width: 35vh; margin: 5px auto ">
            <p style="text-align: center;">&nbsp;</p>

            <div class="group">
                <input type="text" id="Email" name="Email" value="@ViewBag.Email" required>
                <span class="highlight"></span>
                <span class="bar"></span>
                <label>Enter your Email:</label>
            </div>

            <div class="group">
                <input type="text" id="Log" name="Log" value="@ViewBag.LoginSession" required>
                <span class="highlight"></span>
                <span class="bar"></span>
                <label>Enter your Log In:</label>
            </div>

            <div class="group">
                <input type="password" id="Pass" name="Pass" value="@ViewBag.Passwords" required>
                <span class="highlight"></span>
                <span class="bar"></span>
                <label>Enter your password:</label>
            </div>

            <h5 class="Tittlelabel"> Message: @ViewBag.message </h5>
            <p style="text-align: center;">&nbsp;</p>
            <button type="submit" class="Bto_saved">
                ♻️ Update
            </button>
        }

    </div> 
</div>

<p style="text-align: center;">&nbsp;</p>
<p style="text-align: center;">&nbsp;</p>
<p style="text-align: center;">&nbsp;</p>
<p style="text-align: center;">&nbsp;</p>


