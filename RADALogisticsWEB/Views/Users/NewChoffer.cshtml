
@{
    ViewBag.Title = "RADA Logistics - New Choffer";
}

<link href="~/Stylee/NewUsersStylee.css" rel="stylesheet" />

<div class="container" style="text-align: center; width: 100%; height: 100%">

    <div style="text-align: center; min-width: 100%; ">

        <h3 style="font-weight: 700;">Rada Logistics system</h3>

        <p style="text-align: center;">&nbsp;</p>
        <img src="~/Pictures/icono_choffuer.png" height="100" />
        <p style="text-align: center;">&nbsp;</p>

        <style>
            .page-title {
                text-align: center;
                font-size: 21px;
                font-weight: 700;
                color: #2c3e50;
                margin-bottom: 15px;
            }

            .section-subtitle {
                text-align: center;
                font-size: 17px;
                font-weight: 500;
                color: #555;
                margin-bottom: 25px;
            }
        </style>

        <h2 class="page-title">Generate new drivers in the system </h2>
        <h4 class="section-subtitle"> Create New User </h4>

        <hr>
        <div style=" display: flex; justify-content: center; align-items: center; height: auto;">
            <button class="animated-button" onclick="location.href='@Url.Action("Home","Users")'">
                <svg xmlns="http://www.w3.org/2000/svg" class="arr-2" viewBox="0 0 24 24">
                    <path d="M16.1716 10.9999L10.8076 5.63589L12.2218 4.22168L20 11.9999L12.2218 19.778L10.8076 18.3638L16.1716 12.9999H4V10.9999H16.1716Z"></path>
                </svg>
                <span class="text">Return to back</span>
                <span class="circle"></span>
                <svg xmlns="http://www.w3.org/2000/svg" class="arr-1" viewBox="0 0 24 24">
                    <path d="M16.1716 10.9999L10.8076 5.63589L12.2218 4.22168L20 11.9999L12.2218 19.778L10.8076 18.3638L16.1716 12.9999H4V10.9999H16.1716Z"></path>
                </svg>
            </button>
        </div>
        <hr>

        @using (Html.BeginForm("ProcessChoffer", "Users", FormMethod.Post))
        {
            <input type="text" id="User" name="User" value="@ViewBag.User" hidden="hidden" required>

            <p style="text-align: center;">&nbsp;</p>
            <div class="group">
                <input type="text" id="Username" name="Username" required>
                <span class="highlight"></span>
                <span class="bar"></span>
                <label>Enter your Username:</label>
            </div>

            <div class="group">
                <input type="number" id="FastCard" name="FastCard" required>
                <span class="highlight"></span>
                <span class="bar"></span>
                <label>Enter your FastCard:</label>
            </div>

            <h5 class="typelbl" style="text-align: center; font-size: 15px; font: bold; ">Assigned work Area:</h5>
            <div class="group">

                <select name="Area" id="Area" class="form-control" style="max-width: 30vh; color: black; text-align: center">
                    @foreach (var person in ViewBag.Records)
                    {
                        <option value="@person.Name">@person.Name</option>
                    }
                </select>

                <p style="padding:10px 0px 0px 0px">@Html.ActionLink("New Area", "Area")</p>
            </div>

            <h5 class="typelbl" style="text-align: center; font-size: 15px; font: bold; ">Assigned work shift:</h5>
            <div class="group">
                <select name="Shift" id="Shift" class="form-control" style="max-width: 30vh; color: black; text-align: center">
                    <option value="1">1</option>
                    <option value="2">2</option>
                </select>
            </div>

            <p style="text-align: center;">&nbsp;</p>
            <button type="submit" class="Bto_saved">
                ✅ Save
            </button>
            <p style="text-align: center;">&nbsp;</p>
        }

        <p style="text-align: center;">&nbsp;</p>
        <p style="text-align: center;">&nbsp;</p>

        <h4 class="Tittlelabel"> Users recently registered to the system </h4>
        <h5 class="Tittlelabel"> Total Records: @ViewBag.Count </h5>
        <ul class="responsive-table">
            <li class="table-header" id="tableData">

                <div class="col col-1" style="text-align:center" ,>ID</div>

                <div class="col col-2" style="text-align:center">Who Create</div>

                <div class="col col-2" style="text-align:center">Username</div>

                <div class="col col-1" style="text-align:center">FastCard</div>

                <div class="col col-3" style="text-align:center">Area</div>

                <div class="col col-1" style="text-align:center">Shift</div>

                <div class="col col-5" style="text-align:center">Date</div>

                <div class="col col-2" style="text-align:center">Options</div>
            </li>
            @foreach (var person in ViewBag.RecordChoffers)
            {
                <li class="table-row" id="tblCustomers">

                    <div class="col col-1" data-label="ID" style="text-align:center">@person.ID</div>

                    <div class="col col-2" data-label="Who Create" style="text-align:center">@person.Who_create</div>

                    <div class="col col-2" data-label="Username" style="text-align:center">@person.Username</div>

                    <div class="col col-1" data-label="Fastcard" style="text-align:center"> @person.Fastcard</div>

                    <div class="col col-3" data-label="Area" style="text-align:center"> @person.Area</div>

                    <div class="col col-1" data-label="Shift" style="text-align:center"> @person.Shift</div>

                    <div class="col col-5" data-label="Date" style="text-align:center"> @person.Datetime</div>

                    <div class="col col-2" data-label="Options" style="text-align:center">

                        @*@Html.ActionLink("🪢 Area Assignment", "Assignments", new { id = @person.ID}) /*@
                        @Html.ActionLink("♻️ Update", "UpdateDriver", new { id = @person.ID }) /
                        @Html.ActionLink("❌ Delete", "RemoverChoffer", new { id = @person.ID })

                    </div>

                </li>
            }
        </ul>

        <p style="text-align: center;">&nbsp;</p>
        <p style="text-align: center;">&nbsp;</p>

    </div>

</div>
