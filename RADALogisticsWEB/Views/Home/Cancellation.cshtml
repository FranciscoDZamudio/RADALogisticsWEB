
@{
    ViewBag.Title = "RADA Logistics - History";
}

<link href="~/Stylee/Cancellation.css" rel="stylesheet" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>

<div class="container" style="text-align: center; width: 100%; height: 100%">

    <div style="text-align: center; min-width: 100%; height: 100% ">

        <style>
            .page-title {
                text-align: center;
                font-size: 18px;
                font-weight: 700;
                color: #2c3e50;
                margin-bottom: 15px;
            }

            .section-subtitle {
                text-align: center;
                font-size: 17px;
                font-weight: 500;
                color: #555;
                margin-bottom: 25px;
            }
        </style>

        <h2 class="page-title"> History of cancelled movements </h2>
        <h4 class="section-subtitle">  View history cancelled </h4>

        <hr>
        <div style=" display: flex; justify-content: center; align-items: center; height: auto;">
            <button class="animated-button" onclick="location.href='@Url.Action("RadaHome", "Home")'">
                <svg xmlns="http://www.w3.org/2000/svg" class="arr-2" viewBox="0 0 24 24">
                    <path d="M16.1716 10.9999L10.8076 5.63589L12.2218 4.22168L20 11.9999L12.2218 19.778L10.8076 18.3638L16.1716 12.9999H4V10.9999H16.1716Z"></path>
                </svg>
                <span class="text">Return to back</span>
                <span class="circle"></span>
                <svg xmlns="http://www.w3.org/2000/svg" class="arr-1" viewBox="0 0 24 24">
                    <path d="M16.1716 10.9999L10.8076 5.63589L12.2218 4.22168L20 11.9999L12.2218 19.778L10.8076 18.3638L16.1716 12.9999H4V10.9999H16.1716Z"></path>
                </svg>
            </button>
        </div>
        <hr>

       @using (Html.BeginForm("Cancellation", "Home", FormMethod.Post))
        {
            <div class="form-row">

                <div class="form-group col-md-6 text-center">
                    <label for="TimeStart" style="font-family: 'Century Gothic'; display: block">Date Start</label>
                    <input id="TimeStart" name="TimeStart" type="date"  class="form-control mx-auto" style="max-width: 100%; display: block;" />
                </div>

                <div class="form-group col-md-6 text-center">
                    <label for="Timeend" style="font-family: 'Century Gothic'; display: block">Date End</label>
                    <input id="Timeend" name="Timeend" type="date" class="form-control mx-auto" style="max-width: 100%; display: block;" />
                </div>

                <p style="text-align: center;">&nbsp;</p>

                <button style="width:45vh" type="submit" class="Bto_saved">
                    🪢 Query
                </button>

                <p style="text-align: center;">&nbsp;</p>
            </div>
        }



    </div>

</div>

<p style="text-align: center;">&nbsp;</p>
<h4 style="text-align: center; font-weight: 700;" class="Tittlelabel"> Latest cancelled movements entered into the system </h4>
<h5 style="text-align:center" class="Tittlelabel"> Total Records: @ViewBag.Count</h5>

<ul class="responsive-table">
    <li class="table-header" id="tableData">

        <div class="col col-1" style="text-align:center">Folio</div>

        <div class="col col-2" style="text-align:center">Reason</div>

        <div class="col col-3" style="text-align:center">Company</div>

        <div class="col col-4" style="text-align:center">Date</div>

        <div class="col col-4" style="text-align:center">Options</div>

    </li>
    @foreach (var person in ViewBag.Records)
    {
        <li class="table-row" id="tblCustomers">

            <div class="col col-1" data-label="Folio" style="text-align:center">@person.Folio</div>

            <div class="col col-2" data-label="Reason" style="text-align:center">@person.Reason</div>

            <div class="col col-3" data-label="Company" style="text-align:center">@person.Company</div>

            <div class="col col-4" data-label="Datetime" style="text-align:center"> @person.Datetime</div>

            <div class="col col-4" data-label="Options" style="text-align:center">
                @Html.ActionLink("🔸View", "Details", new { id = @person.Folio })
            </div>

        </li>
    }
</ul>

