
@{
    ViewBag.Title = "RADA Logistics | History";
}

<link href="~/Stylee/Cancellation.css" rel="stylesheet" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>

<div class="container" style="text-align: center; width: 100%; height: 100%">

    <div style="text-align: center; min-width: 100%; height: 100% ">

        <style>
            .page-title {
                text-align: center;
                font-size: 18px;
                font-weight: 700;
                color: #2c3e50;
                margin-bottom: 15px;
            }

            .section-subtitle {
                text-align: center;
                font-size: 17px;
                font-weight: 500;
                color: #555;
                margin-bottom: 25px;
            }
        </style>

        <h2 class="page-title">Historial de Movimientos Cancelados</h2>
        <h4 class="section-subtitle">Ingresa un rango de fecha para poder consultar la informacion del sistema</h4>
        <p style="text-align: center;">&nbsp;</p>

       @using (Html.BeginForm("Cancellation", "Home", FormMethod.Post))
        {
            <div class="form-row">
                <div class="form-group col-md-6 text-center">
                    <label for="TimeStart" style="font-family: 'Century Gothic'; display: block">Fecha Inicio:</label>
                    <input id="TimeStart" name="TimeStart" type="date" class="form-control mx-auto" style="max-width: 100%; display: block;" />
                </div>

                <div class="form-group col-md-6 text-center">
                    <label for="Timeend" style="font-family: 'Century Gothic'; display: block">Fecha Final:</label>
                    <input id="Timeend" name="Timeend" type="date" class="form-control mx-auto" style="max-width: 100%; display: block;" />
                </div>

                <p style="text-align: center;">&nbsp;</p>

                <button style="width:45vh" type="submit" class="Bto_saved">
                     Buscar
                </button>

                <p style="text-align: center;">&nbsp;</p>
            </div>
        }

    </div>

</div>

<p style="text-align: center;">&nbsp;</p>
<h4 style="text-align: center; font-weight: 700;" class="Tittlelabel"> Registros ingresados recientemente al sistema </h4>
<h5 style="text-align:center" class="Tittlelabel"> Total: @ViewBag.Count</h5>

<ul class="responsive-table">
    <li class="table-header" id="tableData">

        <div class="col col-1" style="text-align:center">Folio</div>

        <div class="col col-2" style="text-align:center">Motivo de cancelado</div>

        <div class="col col-3" style="text-align:center">Empresa</div>

        <div class="col col-4" style="text-align:center">Fecha</div>

        <div class="col col-4" style="text-align:center">Opciones</div>

    </li>
    @foreach (var person in ViewBag.Records)
    {
<li class="table-row" id="tblCustomers" style="color: black;">

    <div class="col col-1" data-label="Folio" style="text-align:center">@person.Folio</div>

    <div class="col col-2" data-label="Reason" style="text-align:center">@person.Reason</div>

    <div class="col col-3" data-label="Company" style="text-align:center">@person.Company</div>

    <div class="col col-4" data-label="Datetime" style="text-align:center"> @person.Datetime</div>

    <div class="col col-4" data-label="Options" style="text-align:center">

        @Html.ActionLink("🎴 Detalles", "Details", "HISENSE", new { ID = person.Folio, Record = "Cancellation" }, null)

    </div>

</li>
    }
</ul>

